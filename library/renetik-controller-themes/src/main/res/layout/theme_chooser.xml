<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CSContainer">

    <com.google.android.material.card.MaterialCardView style="@style/CSPageTitleCard">

        <TextView
            android:id="@+id/ThemeSwitcher_Title"
            style="@style/CSPageTitleMatchWrap"
            android:text="Theme Chooser" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView style="@style/CSContentCardMatchFill">

        <GridView
            android:id="@+id/ThemeSwitcher_Grid"
            style="@style/CSGridMatch"
            android:columnWidth="220dp"
            android:horizontalSpacing="15dp"
            android:paddingBottom="3dp"
            android:verticalSpacing="15dp"
            tools:listitem="@layout/theme_switcher_item" />

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CSContainer">

    <LinearLayout
        style="@style/CSMatch"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView style="@style/CSTextListTitle">

            <TextView
                style="@style/CSTextListSubtitle"
                android:text="Application Log" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/CSLog_LogText"
            style="@style/CSMatchFill"
            android:scrollbars="vertical" />

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/CSLog_Reload"
        style="@style/CSWrap"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:src="@drawable/baseline_refresh_24"
        android:theme="@style/Widget.MaterialComponents.FloatingActionButton"
        tools:elevation="4dp" />
</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/progress_background"
    style="@style/CSVerticalLayoutWrap"
    android:layout_gravity="center"
    android:background="?attr/colorSurface"
    android:padding="15dp">

    <TextView
        android:id="@+id/progress_title"
        style="@style/CSWrap"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Progress Title"
        android:textAppearance="@style/CSTextSubtitle"
        android:textColor="?attr/colorPrimary" />

    <com.google.android.material.progressindicator.ProgressIndicator
        android:id="@+id/progress_indicator"
        style="@style/Widget.MaterialComponents.ProgressIndicator.Circular.Indeterminate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="25dp"
        app:growMode="bidirectional"
        app:indicatorColor="?attr/colorPrimary" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/progress_button_cancel"
        style="@style/CSButtonTextWrap"
        android:layout_gravity="center"
        android:text="Cancel"
        android:textAppearance="@style/CSTextButton"
        android:textColor="?attr/colorPrimary" />

</LinearLayout>
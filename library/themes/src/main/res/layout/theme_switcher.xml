<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CSContainer">

    <com.google.android.material.card.MaterialCardView style="@style/CSPageTitleCard">

        <TextView
            style="@style/CSPageTitle"
            android:text="Theme Switcher" />
    </com.google.android.material.card.MaterialCardView>

    <!-- TODO: Move some items to style of grid as defaults if applicable-->
    <GridView
        android:id="@+id/ThemeSwitcher_Grid"
        style="@style/CSGrid"
        android:layout_height="match_parent"
        android:columnWidth="220dp"
        android:horizontalSpacing="15dp"
        android:numColumns="auto_fit"
        android:paddingBottom="3dp"
        android:scrollbars="none"
        android:stretchMode="columnWidth"
        android:verticalSpacing="15dp"
        tools:listitem="@layout/theme_switcher_item" />

</LinearLayout>
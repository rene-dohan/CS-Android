<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CSContainer">

    <LinearLayout
        style="@style/CSMatch"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView style="@style/CSPageTitleCard">

            <TextView
                android:id="@+id/CSLog_Title"
                style="@style/CSPageTitle"
                android:text="Application Log" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/CSLog_LogText"
            style="@style/CSMatchFill"
            android:scrollbars="vertical" />

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/CSLog_Reload"
        style="@style/CSButtonFloating"
        android:layout_gravity="end|bottom"
        android:src="@drawable/baseline_refresh_24" />
</FrameLayout>

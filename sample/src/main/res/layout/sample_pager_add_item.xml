<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CSContainer"
    android:paddingStart="7dp"
    android:paddingEnd="7dp">

    <com.google.android.material.textfield.TextInputLayout style="@style/CSTextInputMatchWrap">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/SamplePagerAddItem_Name"
            style="@style/CSInputTextMatchWrap"
            android:hint="Name"
            android:inputType="text" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout style="@style/CSTextInputMatchWrap">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/SamplePagerAddItem_Description"
            style="@style/CSInputTextMatchWrap"
            android:hint="Description"
            android:inputType="text" />

    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>
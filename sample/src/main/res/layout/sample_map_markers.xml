<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CSContainer">

    <com.google.android.material.card.MaterialCardView style="@style/CSPageTitleCard">

        <TextView
            android:id="@+id/SampleMap_Title"
            style="@style/CSPageTitle"
            android:text="Sample Map" />
    </com.google.android.material.card.MaterialCardView>

    <FrameLayout style="@style/CSMatchFill">

        <FrameLayout
            android:id="@+id/SampleMap_Map"
            style="@style/CSMatch" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/SampleMap_MapTypeButton"
            style="@style/CSButtonFloating"
            android:layout_gravity="top|start"
            android:src="@drawable/outline_map_24" />

    </FrameLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CSContainer">

    <com.google.android.material.card.MaterialCardView style="@style/CSPageTitleCard">

        <TextView
            android:id="@+id/SampleGetPicture_Title"
            style="@style/CSPageTitle"
            android:text="Example sample list" />
    </com.google.android.material.card.MaterialCardView>

    <FrameLayout style="@style/CSMatchFill">

        <GridView
            android:id="@+id/SampleGetPicture_Grid"
            style="@style/CSGrid"
            tools:listitem="@layout/sample_getpicture_item"
            android:paddingBottom="3dp"
            android:layout_width="match_parent" />

        <TextView
            android:id="@+id/SampleGetPicture_ListEmpty"
            style="@style/CSWrap"
            android:layout_gravity="center"
            android:text="No images in grid"
            android:textAppearance="@style/CSTextHeadline6"
            android:textColor="@color/cs_dark_grey_text" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/SampleGetPicture_AddImageButton"
            style="@style/CSButtonFloating"
            android:src="@drawable/baseline_photo_camera_24"
            app:layout_anchorGravity="end" />
    </FrameLayout>

</LinearLayout>